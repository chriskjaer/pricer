.sidebar
  ul.facets.left
    li
      a(ui-sref='index.products') Alle

    li(ng-repeat="category in filter.categories")
      a(ui-sref='index.products.category({category: category._id})') {{category._id}}
      ul.facets.facets--sub
        li( ng-repeat="subCategory in category.subCategories", 
            ng-if="category._id === $stateParams.category")
          a(ui-sref='index.products.category.subCategory({subCategory: subCategory})') {{subCategory}}

ui-view.content


div.dev.align-center
  | $state = {{$state.current.name}} | 
  | $stateParams = {{$stateParams}} | 
  | $state full url = {{ $state.$current.url.source }}